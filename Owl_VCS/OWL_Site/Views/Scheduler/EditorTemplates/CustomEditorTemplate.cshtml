              source.Custom()
                  .ServerFiltering(true)
                  .Type("aspnetmvc-ajax")
                  .Transport(transport =>
                  {
                      transport.Read("GetUsers", "Scheduler");
                  })
                  .Schema(schema =>
                  {
                      schema.Data("Data")
                          .Total("Total");
