    <div data-container-for="Attendees" class="k-edit-field">
        @(Html.Kendo().MultiSelectFor(m => m.Id)
              .Name("Filter")
              .DataTextField("name")
              .DataValueField("id")
              .Placeholder("Выбор инициаторов")
              .Filter(FilterType.Contains)
              .ValuePrimitive(true)
              .Events(e =>
              {
                  e.Change("onClose");
              })
              .DataSource(source =>
              {
                  source.Custom()
                      .ServerFiltering(true)
                      .Type("aspnetmvc-ajax")
                      .Transport(transport =>
                      {
                          transport.Read("GetUsers", "Scheduler");
                      })
                      .Schema(schema =>
                      {
                          schema.Data("Data")
                              .Total("Total");
                      });
              })
              )
    </div>
    <script type="text/javascript">
        function onClose(e) {
            var multiselect = $("#Filter").data("kendoMultiSelect");
            var checked = multiselect.value();
            var scheduler = $("#scheduler").data("kendoScheduler");
            var filter = {
                logic: "or",
                filters: $.map(checked, function (value) {
                    return {
                        operator: "eq",
                        field: "InitName",
                        value: value
                    };
                })
            };
            scheduler.dataSource.filter(filter);
        }

        
    </script>

}

